{
  "name": "sfflowvisualiser",
  "displayName": "Salesforce Flow Visualiser",
  "description": "Salesforce Flow Visualiser VS Code extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Visualization", "Formatters"
  ],
  "keywords": ["Salesforce", "Flow", "Visualiser", "Visualizer", "Mermaid", "Diagram"],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sfflowvisualiser.generateMermaid",
        "title": "Flow Visualiser: Mermaid"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "sfflowvisualiser.generateMermaid",
          "when": "editorLangId == xml"
        }
      ]
    }
  },
  "extensionDependencies": [
    "vstirbu.vscode-mermaid-preview"
  ],
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "fast-xml-parser": "^4.3.2"
  }
}
